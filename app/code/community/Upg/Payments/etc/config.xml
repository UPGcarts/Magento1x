<?xml version="1.0"?>
<config>
    <modules>
        <Upg_Payments>
            <version>0.1.17</version>
        </Upg_Payments>
    </modules>

    <frontend>
        <translate>
            <modules>
                <upg_payments>
                    <files>
                        <default>Upg_Payments.csv</default>
                    </files>
                </upg_payments>
            </modules>
        </translate>
        <layout>
            <updates>
                <upg_payments>
                    <file>upg/payment.xml</file>
                </upg_payments>
            </updates>
        </layout>
        <routers>
            <upg_payments>
                <use>standard</use>
                <args>
                    <module>Upg_Payments</module>
                    <frontName>paymentmodule</frontName>
                </args>
            </upg_payments>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Upg_Payments before="Mage_Adminhtml">Upg_Payments_Adminhtml</Upg_Payments>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <upg_payments>
                    <file>upg/payment.xml</file>
                </upg_payments>
            </updates>
        </layout>
        <translate>
            <modules>
                <upg_payments>
                    <files>
                        <default>Upg_Payments.csv</default>
                    </files>
                </upg_payments>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch_adminhtml_system_config_save>
                <observers>
                    <upg_payments_fee_duplicates>
                        <type>singleton</type>
                        <class>Upg_Payments_Model_Adminhtml_Observer</class>
                        <method>removeDuplicateCustomFees</method>
                    </upg_payments_fee_duplicates>
                </observers>
            </controller_action_predispatch_adminhtml_system_config_save>
            <admin_system_config_changed_section_upg_payments>
                <observers>
                    <upg_payments_setgender>
                        <type>singleton</type>
                        <class>Upg_Payments_Model_Adminhtml_Observer</class>
                        <method>setGenderRequiredOnEnable</method>
                    </upg_payments_setgender>
                </observers>
            </admin_system_config_changed_section_upg_payments>
            <admin_system_config_changed_section_customer>
                <observers>
                    <upg_payments_set_gender>
                        <type>singleton</type>
                        <class>Upg_Payments_Model_Adminhtml_Observer</class>
                        <method>setGenderRequiredOnEnable</method>
                    </upg_payments_set_gender>
                </observers>
            </admin_system_config_changed_section_customer>
            <adminhtml_widget_container_html_before>
                <observers>
                    <upg_payments_add_order_buttons>
                        <class>upg_payments/adminhtml_observer</class>
                        <type>singleton</type>
                        <method>addUpgApiButtons</method>
                    </upg_payments_add_order_buttons>
                </observers>
            </adminhtml_widget_container_html_before>
        </events>
    </adminhtml>

    <global>
        <blocks>
            <upg_payments>
                <class>Upg_Payments_Block</class>
            </upg_payments>
            <adminhtml>
                <rewrite>
                    <sales_order_creditmemo_create_adjustments>Upg_Payments_Block_Adminhtml_Sales_Order_Creditmemo_Create_Adjustments</sales_order_creditmemo_create_adjustments>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <upg_payments>
                <class>Upg_Payments_Model</class>
                <resourceModel>upg_payments_resource</resourceModel>
            </upg_payments>
            <upg_payments_resource>
                <class>Upg_Payments_Model_Resource</class>
                <entities>
                    <transaction>
                        <table>upg_payments_transactions</table>
                    </transaction>
                    <mns_message>
                        <table>upg_payments_mns_messages</table>
                    </mns_message>
                    <update_transaction>
                        <table>upg_payments_update_transaction</table>
                    </update_transaction>
                </entities>
            </upg_payments_resource>
        </models>
        <helpers>
            <upg_payments>
                <class>Upg_Payments_Helper</class>
            </upg_payments>
        </helpers>
        <resources>
            <upgpayments_setup>
                <setup>
                    <module>Upg_Payments</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </upgpayments_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <upg_payments_fee>
                    <to_order>*</to_order>
                </upg_payments_fee>
                <upg_payments_base_fee>
                    <to_order>*</to_order>
                </upg_payments_base_fee>
            </sales_convert_quote>
            <sales_convert_quote_address>
                <upg_company_registration_id>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </upg_company_registration_id>
                <upg_company_registration_type>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </upg_company_registration_type>
            </sales_convert_quote_address>
            <customer_address>
                <upg_company_registration_id>
                    <to_quote_address>*</to_quote_address>
                </upg_company_registration_id>
                <upg_company_registration_type>
                    <to_quote_address>*</to_quote_address>
                </upg_company_registration_type>
            </customer_address>
        </fieldsets>
        <events>
            <sales_order_payment_capture>
                <observers>
                    <upg_payments>
                        <type>singleton</type>
                        <class>upg_payments/observer</class>
                        <method>addInvoiceToUpdateTransactionTable</method>
                    </upg_payments>
                </observers>
            </sales_order_payment_capture>
        </events>
        <sales>
            <quote>
                <totals>
                    <custom_fee_total>
                        <class>upg_payments/totals_quote_total</class>
                        <after>shipping,tax</after>
                        <before>grand_total</before>
                    </custom_fee_total>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <custom_fee_total>
                        <class>upg_payments/totals_invoice_total</class>
                        <after>shipping,tax</after>
                        <before>grand_total</before>
                    </custom_fee_total>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <custom_fee_total>
                        <class>upg_payments/totals_creditmemo_total</class>
                        <after>shipping,tax</after>
                        <before>grand_total</before>
                    </custom_fee_total>
                </totals>
            </order_creditmemo>
        </sales>
        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <upg_payments>
                        <class>upg_payments/observer</class>
                        <method>resetCustomFeeAddedFlag</method>
                    </upg_payments>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_order_creditmemo_save_before>
                <observers>
                    <upg_payments>
                        <class>upg_payments/observer</class>
                        <method>setCreditmemoPaymentFee</method>
                    </upg_payments>
                </observers>
            </sales_order_creditmemo_save_before>
            <sales_order_invoice_save_before>
                <observers>
                    <upg_payments>
                        <class>upg_payments/observer</class>
                        <method>setInvoiceTotalPaymentFeeRefunded</method>
                    </upg_payments>
                </observers>
            </sales_order_invoice_save_before>
        </events>
        <pdf>
            <totals>
                <rowtotal translate="title">
                    <title>Payment Fee</title>
                    <model>Upg_Payments_Model_Totals_Invoice_PdfTotal</model>
                    <sort_order>200</sort_order>
                </rowtotal>
            </totals>
        </pdf>
    </global>

    <default>
        <payment>
            <upg_payments module="Upg_Payments">
                <model>upg_payments/payment</model>
            </upg_payments>
            <upg module="Upg_Payments">
                <active>1</active>
                <title>Pay by card,Paypal etc</title>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <transaction_mode>TEST</transaction_mode>
                <service_urls>
                    <live>https://www.pay-co.net/2.0</live>
                    <test>https://sandbox.upgplc.com/2.0</test>
                </service_urls>
                <payment_iframe_dimensions_units>px</payment_iframe_dimensions_units>
                <payment_iframe_dimensions_width>0</payment_iframe_dimensions_width>
                <payment_iframe_dimensions_height>0</payment_iframe_dimensions_height>
                <payment_iframe_dimensions_fit_to_width_desktop>1</payment_iframe_dimensions_fit_to_width_desktop>
                <payment_iframe_dimensions_max_mobile_browser_width>450</payment_iframe_dimensions_max_mobile_browser_width>
                <payment_iframe_dimensions_fit_to_width_mobile>1</payment_iframe_dimensions_fit_to_width_mobile>
                <payment_target>0</payment_target>
                <update_transaction_enabled>1</update_transaction_enabled>
            </upg>
        </payment>
    </default>
    <crontab>
        <jobs>
            <upg_mns_process>
                <schedule>
                    <!-- Run every 5 mins -->
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>upg_payments/Mns::process</model>
                </run>
            </upg_mns_process>
            <upg_update_transaction>
                <schedule>
                    <!-- Run every 5 mins -->
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>upg_payments/UpdateTransaction::process</model>
                </run>
            </upg_update_transaction>
            <upg_removeoldpds>
                <schedule>
                    <!-- Run every hour -->
                    <cron_expr>0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>upg_payments/UpdateTransaction::removeOldPDFs</model>
                </run>
            </upg_removeoldpds>
        </jobs>
    </crontab>
</config>